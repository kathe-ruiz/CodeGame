<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="katherine.codegame.FragmentOne">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/java"
                android:id="@+id/tvJava"
                android:background="@drawable/border_rounded_one"
                android:gravity="center_vertical|center_horizontal"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/android"
                android:id="@+id/tvAndroid"
                android:background="@drawable/border_rounded_two"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/php"
                android:background="@drawable/border_rounded_three"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:id="@+id/tvPhp" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/javascript"
                android:background="@drawable/border_rounded_four"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:id="@+id/tvJavascript"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
